entific research, technology development, and information systems; and facilitate engagement between scientific and technical experts and the many types of stakeholders making America's climate choices.<\/p>","bindings":{"print":{"P":{"isbn":{"0":"0-309-14585-6"},"isbn13":{"0":"978-0-309-14585-5"},"price":{"0":"29.95"},"binding":{"0":"P"},"for_sale":{"0":"on"},"free":{},"type":{"0":"print"},"word":{"0":"paperback"},"catalog_word":{"0":"PAPERBACK"},"bind_type":{"0":"print"}}},"pdf":{"pdf_book":{"isbn":{"0":"0-309-14586-4"},"isbn13":{"0":"978-0-309-14586-2"},"price":{"0":"23.00"},"binding":{"0":"pdfb"},"for_sale":{"0":"on"},"free":{"0":"on"},"type":{"0":"pdf_book"},"word":{"0":"PDF Full Book"},"catalog_word":{"0":"PDF BOOK"},"bind_type":{"0":"electronic"}},"globally_free":1,"pdf_chapter":{"isbn":{"0":"0-309-14587-2"},"isbn13":{"0":"978-0-309-14587-9"},"price":{"0":"2.90"},"binding":{"0":"pdfc"},"for_sale":{"0":"on"},"free":{"0":"on"},"type":{"0":"pdf_chapter"},"word":{"0":"PDF By Chapter"},"catalog_word":{"0":"PDF CHAPTERS"},"bind_type":{"0":"electronic"}}},"ebook":{"mobi":{"isbn":{"0":"0-309-30554-3"},"isbn13":{"0":"978-0-309-30554-9"},"price":{"0":"23.99"},"binding":{"0":"mobi"},"for_sale":{"0":"on"},"free":{"0":"off"},"type":{"0":"mobi"},"word":{"0":"Kindle\/MobiPocket"},"catalog_word":{"0":"MOBIPOCKET"},"bind_type":{"0":"electronic"}},"epub":{"isbn":{"0":"0-309-30553-5"},"isbn13":{"0":"978-0-309-30553-2"},"price":{"0":"23.99"},"binding":{"0":"epub"},"for_sale":{"0":"on"},"free":{"0":"off"},"type":{"0":"epub"},"word":{"0":"ePub"},"catalog_word":{"0":"EPUB"},"bind_type":{"0":"electronic"}},"formats":"Kindle\/MobiPocket,ePub"}},"product":{"isbn":{"0":"0-309-14585-6"},"isbn13":{"0":"978-0-309-14585-5"},"price":{"0":"29.95"},"binding":{"0":"P"},"for_sale":{"0":"on"},"free":{},"type":{"0":"print"},"word":{"0":"paperback"},"catalog_word":{"0":"PAPERBACK"},"bind_type":{"0":"print"},"webprice":26.955,"buy":"https:\/\/cart.nap.edu\/cart\/cart.php?list=fs&action=buy%20it&rec