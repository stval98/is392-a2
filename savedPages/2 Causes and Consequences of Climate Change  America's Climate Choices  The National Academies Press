<input name="page" type="hidden" value="25"/>
<input name="chapter" type="hidden" value="4"/>
<div class="input-wrapper">
<input class="bookmark-note" name="note" placeholder="Add a note to your bookmark" tabindex="-1" type="text" value=""/>
</div>
